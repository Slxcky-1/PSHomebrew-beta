{
    "commands": [
        {
            "name": "ticket",
            "description": "Open a support ticket"
        },
        {
            "name": "setuptickets",
            "description": "Configure the ticket system (Admin only)",
            "options": [
                {
                    "name": "enable",
                    "description": "Enable the ticket system",
                    "type": 1
                },
                {
                    "name": "disable",
                    "description": "Disable the ticket system",
                    "type": 1
                },
                {
                    "name": "staffrole",
                    "description": "Set the staff role for tickets",
                    "type": 1,
                    "options": [
                        {
                            "name": "role",
                            "description": "The role that can view and claim tickets",
                            "type": 8,
                            "required": true
                        }
                    ]
                },
                {
                    "name": "category",
                    "description": "Set the category name for tickets",
                    "type": 1,
                    "options": [
                        {
                            "name": "name",
                            "description": "The name of the ticket category",
                            "type": 3,
                            "required": true
                        }
                    ]
                },
                {
                    "name": "ticketmessage",
                    "description": "Set the welcome message shown in new tickets",
                    "type": 1,
                    "options": [
                        {
                            "name": "message",
                            "description": "The message to show in new tickets",
                            "type": 3,
                            "required": true
                        }
                    ]
                },
                {
                    "name": "closedmessage",
                    "description": "Set the message sent in DMs when tickets close",
                    "type": 1,
                    "options": [
                        {
                            "name": "message",
                            "description": "The message to send when a ticket closes",
                            "type": 3,
                            "required": true
                        }
                    ]
                },
                {
                    "name": "view",
                    "description": "View current ticket system settings",
                    "type": 1
                },
                {
                    "name": "panel",
                    "description": "Create a ticket panel in a channel",
                    "type": 1,
                    "options": [
                        {
                            "name": "channel",
                            "description": "The channel to send the ticket panel to",
                            "type": 7,
                            "required": true
                        }
                    ]
                }
            ]
        },
        {
            "name": "transcript",
            "description": "View the transcript of the current ticket (Staff only)"
        }
    ]
}
